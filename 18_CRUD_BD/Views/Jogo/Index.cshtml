@model IEnumerable<_18_CRUD_BD.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}



<div>
    <h1 class="text-center">Index</h1>
    <a asp-action="Create" class="d-flex justify-content-center btn btn-dark">Criar</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome) <i class="bi bi-pencil"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao) <i class="bi bi-chat-left-text"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem) <i class="bi bi-image"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JogoId" class="btn btn-outline-dark">Editar <i class="bi bi-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.JogoId" class="btn btn-outline-dark">Detalhes <i class="bi bi-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.JogoId" class="btn btn-outline-dark">Deletar <i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3 ">
            <div class="card " >
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <a href="#" class="btn btn-dark">Saiba mais</a>
                </div>
            </div>
        </div>

    }
</div>
