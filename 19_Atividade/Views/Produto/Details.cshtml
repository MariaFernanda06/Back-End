@model _19_Atividade.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalhes do Produto <i class="bi bi-book"></i></h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
    </dl>
</div>
<div class="d-flex gap-3 mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ProdutoId" class="btn rosa">Editar <i class="bi bi-pencil"></i></a> |
    <a asp-action="Index" class="btn rosa">Voltar para Lista <i class="bi bi-arrow-counterclockwise"></i></a>
</div>
