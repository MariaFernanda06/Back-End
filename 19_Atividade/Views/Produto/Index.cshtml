@model IEnumerable<_19_Atividade.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<section id="meucarrossel" class="container carousel carousel-dark slide mt-3" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#meucarrossel" data-bs-slide-to="2"></button>
            </div>

            <div class="carousel-inner">

                <div class="carousel-item active" data-bs-interval="1000">
                    <img src="https://www.aazperfumes.com.br/arquivos/Banner-900x358-Dior-MissDior-20171213_01.jpg?v=636487841389030000" class="w-100 d-block">
                </div>

                <div class="carousel-item">
                    <img src="https://assets.bwbx.io/images/users/iqjWHBFdfxIU/iPCpyC8rcXF8/v1/-1x-1.jpg" class="w-100 d-block">
                </div>

                <div class="carousel-item">
                    <img src="https://fashionunited.com/cdn-cgi/image/fit=contain,gravity=center,height=630,quality=70,width=1200/https://fashionunited.com/img/upload/2021/07/14/212478297-2062036693946889-7532861069813572377-n-auec5pjo-2021-07-14.jpeg" class="w-100 d-block">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#meucarrossel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#meucarrossel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </section>

<h1 class="text-center mt-3">Sua Lista</h1>

<p>
    <a asp-action="Create" class="btn rosa">Adicionar produto <i class="bi bi-bookmark-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="col-lg-3">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Preco.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @if(item.Estoque == true)
                {
                    <span>Disponível</span>
                }else{
                    <span>Indisponível</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn rosa">Editar <i class="bi bi-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn rosa">Detalhes <i class="bi bi-book"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn rosa">Deletar <i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3 ">
            <div class="card " >
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <a href="#" class="btn rosa">Saiba mais</a>
                </div>
            </div>
        </div>

    }
</div>
