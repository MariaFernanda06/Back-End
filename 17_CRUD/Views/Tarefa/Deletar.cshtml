@model Tarefa

<h1 class="text-center">Deletar Tarefa</h1>

<p>Tem certeza de que deseja deletar a seguinte tarefa?</p>
<p><strong>Descrição:</strong> @Model.Descricao</p>
<p><strong>Concluída:</strong> @(Model.Concluida ? "Sim" : "Não")</p>

<form asp-action="DeletarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex mt-3 gap-3">
        <button type="submit" class="btn btn-danger">Confirmar Deleção <i class="bi bi-trash3"></i></button>
        <a asp-action="Index" class="btn btn-outline-dark">Cancelar <i class="bi bi-x-lg"></i></a>
    </div>

</form>
