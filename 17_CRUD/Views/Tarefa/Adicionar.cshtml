@model Tarefa

<h1 class="text-center">Adicionar Nova Tarefa</h1>

<form asp-action="Adicionar">
    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Digite a descrição"
            required>
    </div>
    <div class="form-group">
        <label for="Concluida">Concluída:</label>
        <select class="form-control" id="Concluida" name="Concluida">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>
    <div class="d-flex gap-3">
        <button type="submit" class="btn btn-outline-dark mt-2"><i class="bi bi-clipboard-plus"></i> Adicionar</button>
        <a asp-action="Index" class="btn btn-outline-dark mt-2">Voltar para a Lista <i class="bi bi-arrow-counterclockwise"></i></a>
    </div>
</form>
