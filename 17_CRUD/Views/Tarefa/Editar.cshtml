@model Tarefa

<h1 class="text-center">Editar Tarefa</h1>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" asp-for="Descricao" required>
    </div>
    <div class="form-group">
        <label for="Concluida">Concluída:</label>
        <select class="form-control" id="Concluida" name="Concluida" asp-for="Concluida">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>
    <div class="d-flex mt-3 gap-3">
        <button type="submit" class="btn btn-outline-dark">Salvar</button>
        <a asp-action="Index" class="btn btn-outline-dark">Voltar para a Lista <i class="bi bi-arrow-counterclockwise"></i></a>
    </div>

</form>
